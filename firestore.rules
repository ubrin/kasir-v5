rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default-deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow authenticated users to manage customers, invoices, payments, etc.
    match /customers/{customerId} {
      allow read, write, delete: if request.auth != null;
    }
    
    match /invoices/{invoiceId} {
      allow read, write, delete: if request.auth != null;
    }

    match /payments/{paymentId} {
      allow read, write, delete: if request.auth != null;
    }
    
    match /expenses/{expenseId} {
      allow read, write, delete: if request.auth != null;
    }

    match /otherIncomes/{incomeId} {
      allow read, write, delete: if request.auth != null;
    }

    match /collectors/{collectorId} {
      allow read, write, delete: if request.auth != null;
    }

    // Allow public read-only access to the summary stats
    match /app-stats/summary {
      allow get: if true;
      allow list, write, update, delete: if false;
    }
  }
}
