
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for app statistics
    match /app-stats/{docId} {
      // Allow any authenticated user to read summary stats.
      allow read: if request.auth != null;
      // Only backend functions should write to stats.
      allow write: if request.auth == null; 
    }

    // Rules for users collection
    match /users/{userId} {
      // Users can read their own data. Admins can read any user's data.
      allow read: if request.auth.uid == userId || isAdmin();
      // Users can only create their own document. Admins can write to any.
      allow create: if request.auth.uid == userId;
      allow update: if isAdmin();
    }

    // Rules for other collections
    match /{document=**} {
      // Admins have full access to all other collections.
      // Regular users can read/write to customer/invoice/payment data.
      // Backend functions can also access everything.
      allow read, write: if request.auth == null || isAdmin() || (
        (
          resource.collection == "customers" ||
          resource.collection == "invoices" ||
          resource.collection == "payments" ||
          resource.collection == "collectors" ||
          resource.collection == "expenses" ||
          resource.collection == "otherIncomes"
        ) && request.auth != null
      );
    }
  }
}
